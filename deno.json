{
  "name": "@env/devstream",
  "version": "0.1.0",
  "description": "A command-line utility that monitor development activities and provide insights.",
  "author": "Elastic Networth Visualizer <elasticnetworthvisualizer@gmail.com>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Elastic-Networth-Visualizer/devstream.git"
  },
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "include": ["**/*.ts"],
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": false
  },
  "tasks": {
    "build:linux": "deno compile --no-npm --no-check -A --target=x86_64-unknown-linux-gnu --output=devstream main.ts",
    "build:macos": "deno compile --no-npm --no-check -A --target=x86_64-apple-darwin --output=devstream.darwin main.ts",
    "build:windows": "deno compile --no-npm --no-check -A --target=x86_64-pc-windows-msvc --output=devstream.exe main.ts",
    "test": "deno test --allow-all",
    "lint": "deno lint --allow-all",
    "format": "deno fmt",
    "dev": "deno run --watch --allow-read --allow-write --allow-net --allow-env --allow-run main.ts"
  },
  "exports": "./mod.ts",
  "imports": {
    "@cliffy/ansi": "jsr:@cliffy/ansi@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.7",
    "@env/env-event-stream": "jsr:@env/env-event-stream@^0.3.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.17",
    "@std/path": "jsr:@std/path@^1.0.9"
  }
}
